<div>
    <h2 class="text-center my-5">Add Employee</h2>
    @using (Html.BeginForm())
    {
        <div class="w-50 mx-auto p-5 border">
            <div class="form-floating">
                @Html.TextBox("firstname", null, new { @class = "form-control mb-3", @placeholder = "" })
                @Html.Label("firstname", "Firstname")
                @Html.ValidationMessage("firstname")
            </div>
            <div class="form-floating">
                @Html.TextBox("lastname", null, new { @class = "form-control mb-3", @placeholder = "" })
                @Html.Label("lastname", "Lastname")
                @Html.ValidationMessage("lastname")
            </div>
            <div class="form-floating">
                @Html.TextBox("emp_role", null, new { @class = "form-control mb-3", @placeholder = "" })
                @Html.Label("emp_role", "Role")
                @Html.ValidationMessage("emp_role")
            </div>
            <div class="form-floating">
                @Html.TextBox("phoneNumber", null, new { @class = "form-control mb-3", @placeholder = "" })
                @Html.Label("phoneNumber", "Contact Number")
                @Html.ValidationMessage("phoneNumber")
            </div>
            <div class="form-floating">
                @Html.TextBox("email", null, new { @class = "form-control mb-3", @placeholder = "", @type = "email" })
                @Html.Label("email", "Email Address")
                @Html.ValidationMessage("email")
            </div>
            <div class="form-floating">
                @Html.TextArea("emp_address", null, new { @class = "form-control mb-3", @placeholder = ""})
                @Html.Label("emp_address", "Address")
                @Html.ValidationMessage("emp_address")
            </div>
            <div class="ps-4 bg-white border rounded-3 mb-3 ">
                <p class="ps-0 mb-1">Gender</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="Male" checked value="Male">
                    <label class="form-check-label" for="Male">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="Female" value="Female">
                    <label class="form-check-label" for="Female">
                        Female
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="Other" value="Other">
                    <label class="form-check-label" for="Other">
                        Other
                    </label>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>
    }
</div>